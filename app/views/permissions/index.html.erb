<p style="color: green"><%= notice %></p>

<h1>Permissions</h1>

<div id="permissions">
  <table class="table table-info">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Acción</th>
      <th>Recurso</th>
      <th colspan="3">Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% @permissions.each do |permission| %>
    <tr>
      <td><%=permission.name %></td>
      <td><%=permission.action %></td>
      <td><%=permission.resource %></td>
      <td>
        <%= link_to "Ver", permission, class: 'btn btn-info btn-sm' %>
        <%= link_to "Editar", edit_permission_path(permission), class: 'btn btn-warning btn-sm' %>
        <%= link_to "Eliminar", permissions_path(permission), data: { turbo_confirmation: "Estás seguro de eliminar?", turbo_method: :delete }, class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New permission", new_permission_path %>
