<p style="color: green"><%= notice %></p>

<h1>Powers</h1>

<table class="table" id="powers">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Puntos de daño</th>
      <th>Raza</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @powers.each do |power| %>
      <%= render power %>
    <% end %>
  </tbody>
  </table>

<%= link_to "New power", new_power_path %>
