<div class="d-flex flex-column mt-5">
  <div class="container bg-light bg-gradient p-5 bg-opacity-75">
    <h2>Log in</h2>
    <% if resource.errors.any? %>
      <% resource.errors.full_messages.each do |error| %>
        <p><%= error%></p>
      <%end %>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name, format: :html)) do |f| %>
      <div class="field">
        <%= f.label :login, class: 'form-label' %><br />
        <%= f.text_field :login, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'form-label' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-success btn-sm' %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
